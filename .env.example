# =============================================================================
# Agentic Honey-Pot API - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file with real credentials to version control

# =============================================================================
# API Authentication
# =============================================================================
# Secret key for API authentication - change this to a secure random string
API_KEY=honeypot-api-key-2024-secure

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Your OpenAI API key (required)
OPENAI_API_KEY=your-penai-api-key-here

# OpenAI model to use for AI agent responses
OPENAI_MODEL=gpt-4.1

# Temperature for AI responses (0.0 - 1.0, higher = more creative)
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis connection URL for session storage
REDIS_URL=redis://localhost:6379

# Session time-to-live in seconds (default: 86400 = 24 hours)
REDIS_SESSION_TTL=86400

# =============================================================================
# GUVI Callback Configuration
# =============================================================================
# URL to send final results callback
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult

# Timeout for callback requests in seconds
CALLBACK_TIMEOUT=5

# Maximum number of retry attempts for failed callbacks
CALLBACK_MAX_RETRIES=3

# =============================================================================
# Agent Behavior Configuration
# =============================================================================
# Minimum number of messages before sending callback
MIN_MESSAGES_FOR_CALLBACK=5

# Minimum number of intelligence items (phone, bank, UPI, etc.) to trigger callback
MIN_INTELLIGENCE_ITEMS=2

# =============================================================================
# Scam Detection Configuration
# =============================================================================
# Confidence threshold for scam detection (0.0 - 1.0)
SCAM_DETECTION_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# Application Settings
# =============================================================================
# Enable debug mode (true/false)
DEBUG=false
